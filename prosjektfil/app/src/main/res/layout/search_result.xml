<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="no.ntnu.asd.prosjektfil.MyProfileActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewProfilbilde2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Fornavn: "
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFornavn2"
        android:layout_below="@+id/imageViewProfilbilde2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:text=""
        android:hint="Ditt navn..."
        android:background="@drawable/textbox_style"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textViewFornavn2"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewFornavn3" />

    <TextView
        android:text="Etternavn:"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFornavn3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textViewEtternavn2" />

    <TextView
        android:text=""
        android:hint="Ditt etternavn..."
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:background="@drawable/textbox_style"
        android:layout_below="@+id/textViewEtternavn2"
        android:id="@+id/textViewEtternavn3" />

    <TextView
        android:text="Mobionummer:"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewFornavn2"
        android:layout_alignStart="@+id/imageViewProfilbilde2"
        android:layout_marginStart="26dp"
        android:id="@+id/textViewMobNr2" />

    <TextView
        android:text=""
        android:hint="Ditt mobilnummer..."
        android:background="@drawable/textbox_style"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textViewFornavn3"
        android:layout_alignStart="@+id/textViewMobNr2"
        android:id="@+id/textViewMobNr3" />

    <TextView
        android:text="Adresse"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewEtternavn3"
        android:layout_alignStart="@+id/textViewMobNr3"
        android:id="@+id/textViewAdress2" />

    <TextView
        android:text=""
        android:hint="Din adresse..."
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textViewAdress2"
        android:background="@drawable/textbox_style"
        android:layout_alignStart="@+id/textViewAdress2"
        android:id="@+id/textViewAdress3" />

    <TextView
        android:text=""
        android:hint="Litt om deg selv..."
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCV2"
        android:layout_marginTop="10dp"
        android:id="@+id/cv"
        android:background="@drawable/textbox_style"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="Om deg:"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textViewCV2"
        android:layout_below="@+id/textViewEtternavn3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
